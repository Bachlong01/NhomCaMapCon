@page
@model SellKoiWeb.Pages.CheckoutModel

@{
    Layout = null;
}

<h2>Thanh toán Cá Koi</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div class="koi-details">
    <!-- Hiển thị ảnh cá Koi được chọn -->
    <img src="@Model.SelectedFish?.Image" alt="@Model.SelectedFish?.Name" width="200" />
    <h3>@Model.SelectedFish?.Name</h3>
    <p class="price">Giá: @Model.SelectedFish?.Price</p>
    <p class="rating">Đánh giá: @Model.SelectedFish?.Rating</p>
</div>

<form method="post">
    <input type="hidden" name="FishId" value="@Model.SelectedFish?.Id" />
    <div>
        <label for="buyerName">Tên người mua:</label>
        <input type="text" id="buyerName" name="BuyerName" required />
    </div>
    <div>
        <label for="buyerEmail">Email:</label>
        <input type="email" id="buyerEmail" name="BuyerEmail" required />
    </div>
    <div>
        <label for="address">Địa chỉ giao hàng:</label>
        <textarea id="address" name="Address" required></textarea>
    </div>
    <button type="submit" class="btn-submit">Xác nhận thanh toán</button>
</form>
{
<div class="alert alert-success">
    @TempData["SuccessMessage"]
</div>


}
